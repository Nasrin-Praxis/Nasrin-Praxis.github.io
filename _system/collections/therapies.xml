<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="general">
            <field name="description" type="textarea" label="Kurzbeschreibung" filter="string" class="form-control" rows="10" />
        </fieldset>
        <fieldset name="options">
            <field name="image" type="media" label="Foto" filter="string" class="form-control" directory="_media/therapien" />
            <field name="align" default="right" type="list" label="Banner Text Orientierung" class="form-control">
                <option value="right">Rechts</option>
                <option value="left">Links</option>
            </field>
        </fieldset>
    </fields>
</form>
